{
  "name": "owl-world-backend",
  "version": "1.0.0",
  "description": "Backend repository for the OWL World Hackaton project",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrations:run": "npx ts-node src/db/run-migrations.ts up",
    "migrations:create": "sequelize-cli migration:generate --name",
    "migrations:undo": "npx sequelize-cli db:migrate:undo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OWL-lang-org/owl-world-backend.git"
  },
  "author": "Nicolas Vergara",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/OWL-lang-org/owl-world-backend/issues"
  },
  "homepage": "https://github.com/OWL-lang-org/owl-world-backend#readme",
  "dependencies": {
    "@ethereum-attestation-service/eas-sdk": "^2.9.1-beta.1",
    "@hapi/boom": "^10.0.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hapi__boom": "^7.4.1",
    "@types/node": "^24.5.2",
    "sequelize-cli": "^6.6.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
